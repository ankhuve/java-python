import java.util.Scanner;

public class NextNumber {

	public static void main( String[] args ){
		Scanner scan = new Scanner(System.in);
		int[] array;
		System.err.print("Mata in n: ");
		int n = scan.nextInt();
		array = new int[n];
		boolean check = false;
		int possible_b = 0;
		int possible_c = 0;

		for (int i=0; n>i ;i++) {
			int s = scan.nextInt();
			array[i] = s;
		}
		
		
		for (int c=-9; c<=9; c++){
			for(int b=-9; b<=9; b++){
				check = false;
				for (int i=0; n>i ;i++) {
					if (array[i]*b+c==array[i+1]){
						check = true; // found a solution, try next number with the same
						possible_b = b;
						possible_c = c;
						if(array[i+1]==array[n-1]){ // we're on the last one
							break;
						} else{
							break;
						}
					} else{
						check = false;
					}
				}
			}
		}


		if (check){ // we have a solution
			System.out.println(array[n-1]*possible_b+possible_c);
		} else{
			System.out.println("no");
		}
	}
}