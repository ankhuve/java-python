import java.util.Scanner;

public class TalSpiral {

	public static void main( String[] args ){
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
//		int k = scan.nextInt();
		int previousSqrt = (int)Math.floor(Math.sqrt(n));
		int perfectSquare = previousSqrt*previousSqrt;
		int diffFromPerfect = n-perfectSquare;
		int rows = previousSqrt;
		int cols = previousSqrt;
		System.out.println(previousSqrt + " " + perfectSquare + " " + diffFromPerfect);
		if (diffFromPerfect==1){ // number stopped in top right corner: no additional rows, one additiona1 column
			System.out.println("1" + " " + (previousSqrt+1));
			cols++;
		} else if (diffFromPerfect<previousSqrt){ // we have no additional rows, only one additional column
			System.out.println("Lägger till en ny kolumn");
			cols++;
		} else if (diffFromPerfect>previousSqrt && diffFromPerfect){
			cols++;
			rows++;
		}
		System.out.println("Rows: "+rows + " Cols: " + cols);
	}
}